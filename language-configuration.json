    "onEnterRules": [
        {
            "beforeText": "^(([\\/\\=\\-\\+<]{2,})|<.*)|([ \\t]*(if|while|for|with|\\+).*:)$",
            "action": {
                "indent": "indent"
            }
        }
    ]
