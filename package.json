{
	"name": "mast",
	"displayName": "MAST",
	"description": "%description%",
	"version": "0.2.0",
	"publisher": "astrolamb",
	"license": "MIT",
	"icon": "mast.png",
	"engines": {
		"vscode": "^1.75.0"
	},
	"repository": "https://github.com/astrolamb-gaming/VS-Code-MAST-Extension",
	"categories": [
		"Programming Languages"
	],
	"main": "./client/out/extension",
	"activationEvents": [],
	"capabilities": {
		"workspaceSymbolProvider": "true"
	},
	"contributes": {
		"languages": [
			{
				"id": "mast",
				"extensions": [
					".mast"
				],
				"icon": {
					"dark": "mast.png",
					"light": "mast.png"
				},
				"aliases": [
					"MAST",
					"mast",
					"Mast"
				],
				"filenames": [
					"SConstruct",
					"SConscript"
				],
				"firstLine": "# MAST File",
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mast",
				"scopeName": "source.mast",
				"path": "./syntaxes/mast_test.tmLanguage.json"
			},
			{
				"scopeName": "source.regexp.mast",
				"path": "./syntaxes/MagicRegExp.tmLanguage.json"
			}
		],
		"configurationDefaults": {
			"[MAST]": {
				"diffEditor.ignoreTrimWhitespace": false,
				"editor.defaultColorDecorators": "auto",
				"editor.showFoldingControls": "always",
				"editor.folding": true,
				"editor.foldingStrategy": "indentation"
			},
			"editor.tokenColorCustomizations": {
				"textMateRules": [
					{
						"scope": "label",
						"settings": {
							"foreground": "#C586C0",
							"fontStyle": "bold"
						}
					},
					{
						"scope": "label.jump.keyword",
						"settings": {
							"foreground": "#C586C0",
							"fontStyle": ""
						}
					},
					{
						"scope": "label.main.designator",
						"settings": {
							"foreground": "#C586C0"
						}
					},
					{
						"scope": "label.sub.designator",
						"settings": {
							"foreground": "#C586C0"
						}
					},
					{
						"scope": "string.quoted.double.map.description.mast",
						"settings": {
							"fontStyle": "bold"
						}
					},
					{
						"scope": "success.yield.result",
						"settings": {
							"foreground": "#008b00"
						}
					},
					{
						"scope": "fail.yield.result",
						"settings": {
							"foreground": "#a50000"
						}
					},
					{
						"scope": "constant.language.mast",
						"settings": {
							"foreground": "#569CD6"
						}
					},
					{
						"scope": "import.file.mast",
						"settings": {
							"foreground": "#CCCCCC"
						}
					},
					{
						"scope": "meta.injection.python",
						"settings": {
							"fontStyle": "italic"
						}
					},
					{
						"scope": "string.weighted.percent.start",
						"settings": {
							"foreground": "#007e6e",
							"fontStyle": "bold"
						}
					},
					{
						"scope": "string.weighted.percent.weight-value",
						"settings": {
							"foreground": "#00960f",
							"fontStyle": "bold"
						}
					},
					{
						"scope": "comms.button",
						"settings": {
							"foreground": "#7fad00",
							"fontStyle": "bold"
						}
					}
				]
			}
		},
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"__metadata": {
		"size": 150725
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/adm-zip": "^0.5.7",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"node-fetch": "^3.3.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.16.0"
	},
	"dependencies": {
		"adm-zip": "^0.5.16",
		"vscode-uri": "^3.0.8"
	}
}
